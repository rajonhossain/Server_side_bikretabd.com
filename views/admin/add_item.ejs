<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard bikreta bd অনলাইন শপিং মার্কেটপ্লেস</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('header/header.ejs') %>

        <div id="layoutSidenav">
            <%- include('leftbar/leftbar.ejs') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <% if(item !=0) {%>
                                <h5 class="mt-4 text-light p-2"
                                    style="background-color:<%= body_color ?  body_color : 'black' %>">
                                    <i class="fa-solid fa-rectangle-list"></i> Add
                                    Items
                                </h5>
                                <br />
                                <form action="/admin/item_add_data" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-2">Name</div>
                                        <div class="col-10">
                                            <input type="text" class="form-control" id="inputPassword" name="item_name"
                                                placeholder="Please entry items name" style="height: 50px"><br /><br />
                                        </div>

                                        <div class="col-2">Front side Item</div>
                                        <div class="col-10">
                                            <input type="file" onchange="fontimge(event)" class="form-control"
                                                id="inputPassword" name="imgfile">
                                            <img id="fontimg_output"
                                                src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg" />
                                            <br /><br />
                                        </div>

                                        <div class="col-2">Back side Item</div>
                                        <div class="col-10">
                                            <input type="file" onchange="backimge(event)" class="form-control"
                                                id="inputPassword" name="imgfile">
                                            <img id="back_img_output"
                                                src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg" />
                                            <br /><br />
                                        </div>

                                        <div class="col-2">Brand Name</div>
                                        <div class="col-10">
                                            <select class="form-select" name="brand_id"
                                                aria-label="Default select example" style="height: 50px">
                                                <option value="0">This Select brand</option>
                                                <% brand_name.forEach((data)=> { %>
                                                    <option value="<%= data.id %>">
                                                        <%= data.brand_name %>
                                                    </option>
                                                    <% }) %>
                                            </select><br /><br />
                                        </div>


                                        <div class="col-2">Sub_Catagory</div>
                                        <div class="col-10">
                                            <select class="form-select" name="sub_cat_id"
                                                aria-label="Default select example" style="height: 50px">
                                                <option value="0">This Select Sub Catagory</option>
                                                <% sub_cata.forEach((data)=> { %>
                                                    <option value="<%= data.id %>">
                                                        <%= data.name %>
                                                    </option>
                                                    <% }) %>
                                            </select> <br /><br />
                                        </div>

                                        <div class="col-2">Stock</div>
                                        <div class="col-10">
                                            <select class="form-select" name="stock" aria-label="Default select example"
                                                style="height: 50px">
                                                <option selected>This Select Stock</option>
                                                <option value="1">Stock In</option>
                                                <option value="0">Stock Out</option>
                                            </select><br /><br />
                                        </div>


                                        <div class="col-2">Discount Price</div>
                                        <div class="col-10">
                                            <input type="number" name="dis_price" class="form-control"
                                                placeholder="Discount price" style="height: 50px"><br /><br />
                                        </div>


                                        <div class="col-2">Regular Price</div>
                                        <div class="col-10">
                                            <input type="number" name="regular_price" class="form-control"
                                                placeholder="Regular Price" style="height: 50px"><br /><br />
                                        </div>


                                        <div class="col-2">Link</div>
                                        <div class="col-10">
                                            <input type="text" class="form-control" name="link"
                                                placeholder="product image link" style="height: 50px"> <br /><br />
                                        </div>



                                        <div class="col-2">Sort Details</div>
                                        <div class="col-10">
                                            <input type="text" class="form-control" name="sort_details"
                                                placeholder="sort_details" style="height: 50px"> <br /><br />
                                        </div>



                                        <div class="col-2">Status</div>
                                        <div class="col-10">
                                            <select class="form-select" name="status"
                                                aria-label="Default select example" style="height: 50px">
                                                <option value="0">0</option>
                                                <option value="1">1</option>
                                            </select><br /><br />
                                        </div>


                                        <div class="col-2">Details</div>
                                        <div class="col-10">
                                            <textarea placeholder="Details" name="details" class="form-control"
                                                id="exampleFormControlTextarea1" rows="5"></textarea>
                                        </div>

                                        <div class="col-2"> </div>
                                        <div class="col-md-10"> <br />
                                            <button type="submit" class="btn btn-success"
                                                style="width: 20%; padding:10px">Save</button>
                                            <button type="reset" class="btn btn-primary"
                                                style="width: 20%; padding:10px">Reset</button>
                                        </div>

                                    </div>

                                    <br />
                                </form>
                                <% } else { %>
                                    <div class="text-danger text-center" style="margin-top:10%; padding: 20px">Add Items
                                        form display No permission</div>
                                    <% } %>
                        </div>
                    </main>

                </div>
        </div>


        <style>
            #fontimg_output,
            #back_img_output {
                width: 100px;
                height: 100px;
                border: 1px solid rgb(175, 172, 172);
                margin-top: 5px;
            }

            .form_validation {
                width: 80%;
                height: 81%;
                background: #ef06318a;
                z-index: 10;
                position: absolute;
                text-align: center;
                padding-top: 50px;
                font-size: 30px;
                color: red;
            }
        </style>

        <script>
            var fontimge = function (event) {
                var output = document.getElementById('fontimg_output');
                output.src = URL.createObjectURL(event.target.files[0]);
                output.onload = function () {
                    URL.revokeObjectURL(output.src) // free memory
                }
            };


            var backimge = function (event) {
                var output = document.getElementById('back_img_output');
                output.src = URL.createObjectURL(event.target.files[0]);
                output.onload = function () {
                    URL.revokeObjectURL(output.src) // free memory
                }
            };



        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="/js/datatables-simple-demo.js"></script>
</body>

</html>